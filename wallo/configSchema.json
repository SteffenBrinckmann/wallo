{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wallo configuration schema",
  "type": "object",
  "properties": {
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "system-prompt": {
            "type": "string"
          },
          "buttons": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "prompts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "user-prompt": {
                  "type": "string"
                },
                "inquiry": {
                  "type": "boolean"
                }
              },
              "required": [
                "name",
                "user-prompt",
                "inquiry"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "name",
          "system-prompt",
          "buttons",
          "prompts"
        ],
        "additionalProperties": false
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "api": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "models": {
            "type": "object",
            "additionalProperties":{
              "type": "object",
              "properties": {
                "temperature": {"type": "number"},
                "top_p": {"type": "number"},
                "presence_penalty": {"type": "number"},
                "frequency_penalty": {"type": "number"}
              },
              "required": []
            }
          }
        },
        "required": [
          "api",
          "models",
          "type"
        ],
        "additionalProperties": true
      }
    },
    "dictionary": {
      "type": "string"
    },
    "startCounts": {
      "type": "integer"
    }
  },
  "required": [
    "profiles",
    "services"
  ],
  "additionalProperties": false
}